@using PrivateWorkshop.Constants
@using PrivateWorkshop.Models.Enums
@model IEnumerable<Booking>

<h1 class="text-center mb-5">My Bookings</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        You have no bookings yet.
    </div>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <form method="get" class="d-flex align-items-center">
        <label for="sortBy" class="me-2 fw-semibold mb-0">Sort by:</label>
            <select name="sortBy" id="sortBy" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                <option value="created" selected="@(ViewBag.SortBy == "created")">Created Date</option>
                <option value="date" selected="@(ViewBag.SortBy == "date")">Booking Date</option>
        </select>
    </form>
    </div>




    <div class="list-group">
        @foreach (var booking in Model)
        {
            <div class="list-group-item mb-3" id="booking-@booking.Id">
                <h4>@booking.Workshop.Title</h4>
                <p>
                    <strong>Client:</strong> @booking.Client.Email
                </p>

                <p>
                    <strong>Date:</strong> @booking.Date.ToString("yyyy-MM-dd")
                </p>

                <p>
                    <strong>Time Slot:</strong> @booking.Duration
                </p>

                <p>
                <p>
                    <strong>Status:</strong>
                    @{
                        string statusText;
                        string statusClass;

                        switch (booking.Status)
                        {
                            case BookingStatus.Pending:
                                statusText = "รอดำเนินการ";
                                statusClass = "warning";
                                break;

                            case BookingStatus.Approved:
                                statusText = "อนุมัติแล้ว";
                                statusClass = "success";
                                break;

                            case BookingStatus.Rejected:
                                statusText = "ถูกปฏิเสธ";
                                statusClass = "danger";
                                break;

                            case BookingStatus.Cancelled:
                                statusText = "ยกเลิก";
                                statusClass = "secondary";
                                break;

                            default:
                                statusText = booking.Status.ToString();
                                statusClass = "secondary";
                                break;
                        }
                    }

                    <span class="badge bg-@statusClass">
                        @statusText
                    </span>
                </p>

                </p>

                <p><strong>Created:</strong> @booking.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

                <div class="d-flex justify-content-between align-items-center mt-3">

                    <!-- กลุ่มปุ่มฝั่งซ้าย -->
                    <div class="d-flex gap-2">
                        <a asp-controller="Workshop" asp-action="Details" asp-route-id="@booking.WorkshopId"
                           class="btn btn-sm btn-outline-primary">
                            View Workshop
                        </a>

                        @if (!User.IsInRole(Roles.Admin) && booking.Status == BookingStatus.Pending)
                        {
                            <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Cancel Booking
                                </button>
                            </form>
                        }

                        @if (User.IsInRole(Roles.Admin) && booking.Status == BookingStatus.Pending)
                        {
                            <form asp-action="Approve" asp-route-id="@booking.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">
                                    Approve
                                </button>
                            </form>

                            <form asp-action="Reject" asp-route-id="@booking.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-warning text-dark">
                                    Reject
                                </button>
                            </form>

                        }
                    </div>

                    @if (User.IsInRole(Roles.Admin))
                    {
                        <form asp-action="Delete" asp-route-id="@booking.Id" method="post" class="d-inline ms-auto">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    }


                </div>


            </div>
        }
    </div>
}
